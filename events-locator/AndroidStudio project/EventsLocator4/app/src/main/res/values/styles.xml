<resources>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/theme_background</item>
    </style>

    <style name="searchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="iconifiedByDefault">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="toolbarSearchEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@android:color/transparent</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="textH1" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textH2" parent="android:Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textH3" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textH4" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_sub_ico</item>
    </style>

    <style name="textH5" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_sub_ico</item>
    </style>

    <style name="textNormal" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textSmall" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="textSmallGray" parent="android:Widget.TextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_sub_ico</item>
    </style>

    <style name="textBig" parent="android:Widget.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/searchView</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
